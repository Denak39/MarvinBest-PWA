    "prepare": "husky install",
    "start:preview": "vite preview",
    "start": "vite",
    "stylelint:check": "stylelint \"**/*.scss\" --max-warnings 0",
    "stylelint:fix": "stylelint --fix \"**/*.scss\"",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "vitest",
    "test": "vitest run"
