{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "rules": {
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "to-rem"
        ]
      }
    ],
    "selector-class-pattern": "^([A-Za-z0-9-]+)?(__([A-Za-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "selector-id-pattern": "^([A-Za-z0-9-]+)?(__([A-Za-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$"
  }
}