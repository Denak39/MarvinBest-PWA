{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "rules": {
    "font-family-name-quotes": "always-unless-keyword",
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "to-rem"
        ]
      }
    ],
    "function-url-quotes": "always",
    "selector-attribute-quotes": "always",
    "selector-class-pattern": "^([A-Za-z0-9-]+)?(__([A-Za-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "selector-id-pattern": "^([A-Za-z0-9-]+)?(__([A-Za-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
  }
}